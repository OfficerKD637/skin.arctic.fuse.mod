<?xml version="1.0" encoding="UTF-8"?>
<window>
    <zorder>0</zorder>
    <visible>Window.IsActive(VideoFullScreen.xml) | Window.IsActive(MusicVisualisation.xml)</visible>

    <visible>[Player.Paused + [!$EXP[Exp_OSD_DelayInfo_Timing] | !Skin.HasSetting(OSD.AutoHideOnPause)]] | Player.Caching | Player.Seeking | Player.HasPerformedSeek(2) | Player.Forwarding | Player.Rewinding | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput) | Window.IsActive(script-upnext-stillwatching.xml) | Window.IsActive(script-upnext-upnext.xml) | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(1140) | Window.IsActive(1141) | Window.IsActive(1142) | Window.IsActive(1143) | Window.IsActive(1144) | Window.IsActive(1145) | Window.IsActive(1146) | Window.IsActive(1147) | Window.IsActive(1148) | Window.IsActive(1149) | Window.IsVisible(videobookmarks) | Window.IsVisible(pvrosdguide) | Window.IsVisible(pvrosdchannels) | [Window.IsVisible(script-cu-lrclyrics-main.xml) + Player.ShowInfo]</visible>

    <visible>!Window.IsActive(DialogSlider.xml)</visible>
    <visible>!Player.HasGame</visible>
    <visible>!Window.IsActive(DialogPlayerProcessInfo.xml)</visible>
    <visible>!Window.IsVisible(DialogPlayerProcessInfo.xml)</visible>
    <visible>!Window.IsVisible(1152)</visible>

    <onload condition="Player.Paused + !String.IsEmpty(Window(Home).Property(OSDExtendedInfo))">PlayerControl(Play)</onload>
    <onload condition="Player.Paused + !String.IsEmpty(Window(Home).Property(OSDExtendedInfo))">ClearProperty(OSDExtendedInfo,Home)</onload>
    <controls>

        <control type="group">

            <include content="Animation_ConditionalFade">
                <param name="condition">![Window.IsActive(VideoFullScreen.xml) | Window.IsActive(MusicVisualisation.xml)]</param>
            </include>

            <include>Animation_OSD_Fullscreen_Change</include>

            <control type="group">
                <include>Animation_OSD_Seekbar_Slide</include>
                <include>OSD_Progress_Labels</include>
                <include>OSD_Progress_Bar</include>
                
                <include content="Object_Control" condition="!Skin.HasSetting(OSD.DisplayHeaderOnTop) + !Skin.HasSetting(Furniture.EnableLeftHeader)">
                    <param name="control">label</param>
                    <param name="id">3099</param>
                    <label>$VAR[Label_OSD_Header]</label>
                    <font>font_midi_bold</font>
                    <textcolor>panel_fg_90</textcolor>
                    <height>40</height>
                    <centerbottom>260</centerbottom>
                    <left>view_pad</left>
                    <include>OSD_HideControls</include>
                </include>
                
            </control>
            
            <!-- Top Left Label -->
            <control type="group">
                <animation effect="fade" end="0" start="100" time="300" delay="600" condition="Window.IsActive(1143)">Conditional</animation>
                <left>-120</left>
                <include content="Furniture_Top" condition="Skin.HasSetting(OSD.DisplayHeaderOnTop) | Skin.HasSetting(Furniture.EnableLeftHeader)">
                    <param name="id">3099</param>
                    <param name="label">$VAR[Label_OSD_Header]</param>
                    <param name="textcolor">main_fg_100</param>
                    <param name="include_left_datelabel">true</param>
                </include>
            </control>
            <include condition="!Skin.HasSetting(Furniture.EnableLeftHeader)">Furniture_DateLabel_TopRight</include>

            <include content="OSD_CastInfo_HintText">
                <param name="label">$VAR[Label_OSD_HintText]</param>
                <param name="left">view_pad</param>
                <param name="visible">[Window.IsActive(videoosd) | Window.IsVisible(1140) | Window.IsVisible(videobookmarks)] + ![Window.IsVisible(1141) + Integer.IsEqual(Window(1141).Property(TMDbHelper.WidgetContainer),6539)]</param>
            </include>

            <include content="OSD_CastInfo_HintText">
                <param name="label">$LOCALIZE[31346]</param>
                <param name="left">view_pad</param>
                <param name="visible">Window.IsActive(musicosd) + !Window.IsVisible(1142) + !Window.IsVisible(script-cu-lrclyrics-main.xml)</param>
            </include>
        </control>

    </controls>
</window>