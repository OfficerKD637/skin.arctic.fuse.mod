    <!-- Row Template View -->
    <include name="View_Wall_Include">
    <param name="right_padding" />
    <param name="right_padding_horz" />
    <param name="left_padding" />
    <param name="left_padding_horz" />
    <param name="top">196</param>
    <param name="top_downsize">212</param>
    <param name="top_horz">156</param>
    <param name="top_horz_downsize">172</param>
    <param name="offset_x">200</param>
    <param name="offset_x_vert">200</param>
    <param name="offset_y_vert">40</param>
    <param name="bottom_padding">152</param>
    <param name="bottom_padding_downsize">168</param>
    <param name="pos_y">-149</param>
    <param name="pos_y_downsize">-117</param>
    <param name="anim_numitems">8</param>
    <param name="wall_textlabels">false</param>
        <definition>
            <control type="group">
                <visible>Control.IsVisible($PARAM[id])</visible>
                <control type="group">                    

                    <visible>!$EXP[Exp_InfoDialogs]</visible>                

                    <include content="Animation_Zoom_In">
                        <param name="type">Visible</param>
                        <param name="delay">200</param>
                    </include>
                    <include content="Animation_Zoom_Out">
                        <param name="type">Hidden</param>
                        <param name="delay">200</param>
                    </include>

                    <include content="$PARAM[include]" condition="$EXP[Exp_View_WallVert]">
                        <param name="id">$PARAM[id]</param>
                        <param name="control">panel</param>
                        <param name="orientation">vertical</param>
                        <param name="offset_x">$PARAM[offset_x_vert]</param>
                        <param name="offset_y">$PARAM[offset_y_vert]</param>
                        <param name="item_h">$PARAM[item_h]</param>
                        <param name="item_w">$PARAM[item_w]</param>
                        <param name="itemlayout_h">$PARAM[itemlayout_h]</param>
                        <param name="itemlayout_w">$PARAM[itemlayout_w]</param>
                        <param name="use_movement">$PARAM[use_movement]</param>
                        <param name="detailed">$PARAM[detailed]</param>
                        <param name="wall_textlabels">$PARAM[wall_textlabels]</param>
                        <preloaditems>0</preloaditems>
                        <animation effect="slide" start="0" end="0,$PARAM[pos_y]" tween="quadratic" easing="out" time="400" condition="!Skin.String(Home.SideMenuCollapse,Never) + Skin.HasSetting(View.SwitchVerticalWallSize) + Integer.IsGreater(Container.NumItems,$PARAM[anim_numitems]) + Integer.IsGreaterOrEqual(Container.Position,$PARAM[anim_numitems])">Conditional</animation>
                        <animation effect="slide" start="0" end="0,$PARAM[pos_y_downsize]" tween="quadratic" easing="out" time="400" condition="Skin.String(Home.SideMenuCollapse,Never) + Skin.HasSetting(View.SwitchVerticalWallSize) + Integer.IsGreater(Container.NumItems,$PARAM[anim_numitems]) + Integer.IsGreaterOrEqual(Container.Position,$PARAM[anim_numitems])">Conditional</animation>
                        <include content="Object_Top" condition="!Skin.String(Home.SideMenuCollapse,Never) + !Skin.HasSetting(View.SwitchVerticalWallSize)">
                            <param name="top">$PARAM[top]</param>
                        </include>
                        <include content="Object_Top" condition="Skin.String(Home.SideMenuCollapse,Never) + !Skin.HasSetting(View.SwitchVerticalWallSize)">
                            <param name="top">$PARAM[top_downsize]</param>
                        </include>
                        <include content="Object_Bottom" condition="!Skin.String(Home.SideMenuCollapse,Never) + !Skin.HasSetting(View.SwitchVerticalWallSize)">
                            <param name="bottom">$PARAM[bottom_padding]</param>
                        </include>
                        <include content="Object_Bottom" condition="Skin.String(Home.SideMenuCollapse,Never) + !Skin.HasSetting(View.SwitchVerticalWallSize)">
                            <param name="bottom">$PARAM[bottom_padding_downsize]</param>
                        </include>
                        <include content="Object_Bottom" condition="!Skin.String(Home.SideMenuCollapse,Never) + Skin.HasSetting(View.SwitchVerticalWallSize)">
                            <param name="bottom">$PARAM[pos_y]</param>
                        </include>
                        <include content="Object_Bottom" condition="Skin.String(Home.SideMenuCollapse,Never) + Skin.HasSetting(View.SwitchVerticalWallSize)">
                            <param name="bottom">$PARAM[pos_y_downsize]</param>
                        </include>
                        <include content="Object_Right" condition="Skin.String(Home.SideMenuCollapse,Never)">
                            <param name="right">$PARAM[right_padding]</param>
                        </include>
                        <left>$PARAM[left_padding]</left>
                        <onleft>SetProperty(List.ViewContainer,50)</onleft>
                        <onleft>SetFocus(303,1,absolute)</onleft>
                        <onright>611</onright>
                        <include>Action_View_SlideOver_OnFocus</include>


                        <include content="Action_View_Movement_OnBack">
                            <param name="id">$PARAM[id]</param>
                            <param name="onback">True</param>
                        </include>

                        <pagecontrol>66</pagecontrol>
                        <visible>$PARAM[visible]</visible>
                        <viewtype label="$PARAM[viewtype_label]">wrap</viewtype>
                        <onfocus>ClearProperty(TMDbHelper.WidgetContainer)</onfocus>
                        <onfocus>SetProperty(Background.ShowOverlay,True,Home)</onfocus>
                    </include>

                    <include content="$PARAM[include]" condition="!$EXP[Exp_View_WallVert]">
                        <param name="id">$PARAM[id]</param>
                        <param name="control">panel</param>
                        <param name="offset_x">$PARAM[offset_x]</param>
                        <param name="item_h">$PARAM[item_h]</param>
                        <param name="item_w">$PARAM[item_w]</param>
                        <param name="itemlayout_h">$PARAM[itemlayout_h]</param>
                        <param name="itemlayout_w">$PARAM[itemlayout_w]</param>
                        <param name="use_movement">$PARAM[use_movement]</param>
                        <include content="Object_Right" condition="Skin.String(Home.SideMenuCollapse,Never)">
                            <param name="right">$PARAM[right_padding_horz]</param>
                        </include>
                        <include content="Object_Top" condition="!Skin.String(Home.SideMenuCollapse,Never) + !Skin.HasSetting(View.SwitchVerticalWallSize)">
                            <param name="top">$PARAM[top_horz]</param>
                        </include>
                        <include content="Object_Top" condition="Skin.String(Home.SideMenuCollapse,Never) + !Skin.HasSetting(View.SwitchVerticalWallSize)">
                            <param name="top">$PARAM[top_horz_downsize]</param>
                        </include>
                        <bottom>$PARAM[bottom_padding]</bottom>
                        <left>$PARAM[left_padding_horz]</left>
                        <include>Action_View_SlideOver_OnFocus</include>
                        <include content="Action_View_Movement_OnUp">
                            <param name="id">$PARAM[id]</param>
                        </include>
                        <include content="Action_View_Movement_OnLeftRight">
                            <param name="id">$PARAM[id]</param>
                            <param name="onback">[Integer.IsEqual(Container($PARAM[id]).CurrentItem,1)]</param>
                        </include>
                        <include content="Action_View_Movement_OnDown">
                            <param name="id">$PARAM[id]</param>
                        </include>
                        <pagecontrol>60</pagecontrol>
                        <visible>$PARAM[visible]</visible>
                        <viewtype label="$PARAM[viewtype_label]">wrap</viewtype>
                        <onfocus>ClearProperty(TMDbHelper.WidgetContainer)</onfocus>
                        <onfocus>SetProperty(Background.ShowOverlay,True,Home)</onfocus>
                    </include>
                    <control type="group">
                        <visible>Skin.HasSetting(View.SwitchVerticalWallSize) + $EXP[Exp_View_WallVert]</visible>
                        <control type="image">
                            <top>0</top>
                            <height>view_side</height>
                            <texture colordiffuse="main_bg_90" flipy="true">common/gradient-v.png</texture>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="in" condition="Integer.IsGreaterOrEqual(Container.Position,$PARAM[anim_numitems])" reversible="false">Conditional</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="in" condition="![Integer.IsGreaterOrEqual(Container.Position,$PARAM[anim_numitems])]" reversible="false">Conditional</animation>
                        </control>
                        <control type="image">
                            <bottom>0</bottom>
                            <height>view_side</height>
                            <texture colordiffuse="main_bg_90">common/gradient-v.png</texture>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="in" condition="Container.HasNext" reversible="false">Conditional</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="in" condition="!Container.HasNext" reversible="false">Conditional</animation>
                        </control>
                        <control type="image">
                            <bottom>0</bottom>
                            <height>480</height>
                            <texture colordiffuse="main_bg_90">common/gradient-v.png</texture>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="in" condition="[$EXP[Exp_View_SortModeButtons_HasFocus] | $EXP[Exp_View_AlphabetFilter_HasFocus] | Window.IsVisible(1171)]" reversible="false">Conditional</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="in" condition="![$EXP[Exp_View_SortModeButtons_HasFocus] | $EXP[Exp_View_AlphabetFilter_HasFocus] | Window.IsVisible(1171)]" reversible="false">Conditional</animation>
                        </control>
                    </control>
                </control>
            </control>
        </definition>
    </include>
</includes>
