<?xml version="1.0" encoding="UTF-8"?>
<window type="window" id="1190">
    <controls>

        <include>Background</include>

        <control type="group">
            <visible>!$EXP[Exp_InfoDialogs]</visible>
            
            <include content="Furniture_Busy">
                <param name="hasspinner">true</param>
                <param name="spinspinner">true</param>
                <param name="icon">special://skin/extras/icons/kodi.png</param>
                <param name="hasbackground">Skin.HasSetting(ToastNotifications.Tabbed)</param>
                <param name="haslabel">Skin.HasSetting(ToastNotifications.Tabbed)</param>
                <param name="spinnervisible">Skin.HasSetting(ToastNotifications.Tabbed) | [!Window.IsActive(DialogVolumeBar.xml) | Player.Muted]</param>
                <param name="visible">[!Skin.HasSetting(ToastNotifications.Tabbed) | [!Window.IsActive(DialogVolumeBar.xml) | Player.Muted]] + !Window.IsVisible(DialogBusy.xml)</param>
            </include>

            <control type="group">
                <left>-120</left>
                <include content="Furniture_Top" condition="Skin.HasSetting(Furniture.EnableLeftHeader) + ![Skin.String(InfoDialog.NavigationStyle,Wall) + Skin.String(InfoDialogWall.Layout,Flip)]">
                     <param name="include_topbar_animation">False</param>
                </include>
            </control>        
            <control type="group">
                <include condition="!Skin.HasSetting(Furniture.EnableLeftHeader)">Furniture_DateLabel_TopRight</include>
                <include>CustomShutdownTimer_Furniture_Top_Right</include>
            </control>
            <control type="group">
                <bottom>-40</bottom>
                <left>-120</left>
                <include>Furniture_Bottom_Left</include>
            </control>
            <control type="group">
                <include>Furniture_Bottom_Right</include>
            </control>
        </control>

        <control type="group">
            <visible>!$EXP[Exp_InfoDialogs]</visible>
            <include>Animation_Transition_InfoPanel_Hide</include>
            <top>80</top>
            <left>-120</left>
            <include content="Widget_Busy">
                <param name="label">$LOCALIZE[19033]</param>
                <param name="visible">!Skin.String(InfoDialog.NavigationStyle,Wall) + String.IsEmpty(Skin.String(InfoDialog.Layout)) + !String.IsEqual(ListItem.Property(tmdb_type),person)</param>
                <param name="include">List_Button_Row_VideoInfo</param>
                <left>145</left>
                <top>450</top>
            </include>
            <control type="group">
                <visible>[[!Skin.String(InfoDialog.NavigationStyle,Wall) + [Skin.String(InfoDialog.Layout,Blur) | Skin.String(InfoDialog.Layout,Poster)]] | [Skin.String(InfoDialog.NavigationStyle,Wall) + !Skin.String(InfoDialogWall.Layout,Flix)] | String.IsEqual(ListItem.Property(tmdb_type),person)]</visible>
                <include content="Object_Height" condition="[Skin.String(InfoDialog.NavigationStyle,Wall) + Skin.String(InfoDialogWall.Layout,Flip)] | ![!Skin.HasSetting(Furniture.EnableLeftHeader) + !Skin.HasSetting(Furniture.EnableClock) + !String.IsEmpty(Skin.String(Furniture.EnableClock.TopLeft))]">
                    <param name="height">820</param>
                </include>
                <include content="Object_Width" condition="[Skin.String(InfoDialog.NavigationStyle,Wall) + Skin.String(InfoDialogWall.Layout,Flip)] | ![!Skin.HasSetting(Furniture.EnableLeftHeader) + !Skin.HasSetting(Furniture.EnableClock) + !String.IsEmpty(Skin.String(Furniture.EnableClock.TopLeft))]">
                    <param name="width">560</param>
                </include>
                <height>infodialog_bigposter_h</height>
                <width>infodialog_bigposter_w</width>
                <include content="Object_Bottom" condition="[Skin.String(InfoDialog.NavigationStyle,Wall) + Skin.String(InfoDialogWall.Layout,Flip)] | ![!Skin.HasSetting(Furniture.EnableLeftHeader) + !Skin.HasSetting(Furniture.EnableClock) + !String.IsEmpty(Skin.String(Furniture.EnableClock.TopLeft))]">
                    <param name="bottom">180</param>
                </include>
                <bottom>160</bottom>
                <include content="Object_Left" condition="Skin.String(InfoDialog.NavigationStyle,Wall) + Skin.String(InfoDialogWall.Layout,Flip)">
                    <param name="left">200</param>
                </include>
                <right>80</right>
                <include>Object_ItemBack</include>
            </control>
            <control type="group">
                <include content="Object_Top" condition="!Skin.HasSetting(Furniture.EnableLeftHeader)">
                    <param name="top">-80</param>    
                </include>
                <include content="Object_Left" condition="Skin.String(InfoDialog.NavigationStyle,Wall) + Skin.String(InfoDialogWall.Layout,Flip)">
                    <param name="left">640</param>
                </include>
                <include content="Info_Panel">
                    <top>view_pad</top>
                    <width>info_panel_w</width>
                    <left>view_side</left>
                </include>
                <include content="Info_Viewline">
                    <param name="label">$LOCALIZE[31324]</param>
                </include>
            </control>
        </control>

    </controls>
</window>