<?xml version="1.0" encoding="UTF-8"?>
<window type="window" id="1190">
    <controls>

        <include>Background</include>

        <control type="group">
            <visible>!$EXP[Exp_InfoDialogs]</visible>
            
            <include content="Furniture_Busy">
                <param name="hasspinner">true</param>
                <param name="spinspinner">true</param>
                <param name="icon">special://skin/extras/icons/kodi.png</param>
                <param name="hasbackground">Skin.HasSetting(ToastNotifications.Tabbed)</param>
                <param name="haslabel">Skin.HasSetting(ToastNotifications.Tabbed)</param>
                <param name="spinnervisible">Skin.HasSetting(ToastNotifications.Tabbed) | [!Window.IsActive(DialogVolumeBar.xml) | Player.Muted]</param>
                <param name="visible">[!Skin.HasSetting(ToastNotifications.Tabbed) | [!Window.IsActive(DialogVolumeBar.xml) | Player.Muted]] + !Window.IsVisible(DialogBusy.xml)</param>
            </include>

            <control type="group">
                <left>-120</left>
                <include content="Furniture_Top" condition="!Skin.HasSetting(Furniture.DisableLeftHeader)">
                     <param name="include_topbar_animation">False</param>
                </include>
            </control>        
            <control type="group">
                <include condition="Skin.HasSetting(Furniture.DisableLeftHeader)">Furniture_DateLabel_TopRight</include>
                <!-- Custom Shutdown Timer -->
                <control type="group">
                    <include condition="![Skin.HasSetting(Furniture.DisableLeftHeader) + [!Skin.HasSetting(Furniture.EnableClock) + [Window.IsVisible(MyPVRGuide.xml) | Window.IsVisible(MyPVRChannels.xml) | !String.IsEmpty(Skin.String(Furniture.EnableClock.TopLeft))]]]">Furniture_Right_SlidingFade</include>
                    <include content="Object_Top" condition="Skin.HasSetting(Furniture.DisableLeftHeader) + [!Skin.HasSetting(Furniture.EnableClock) + [Window.IsVisible(MyPVRGuide.xml) | Window.IsVisible(MyPVRChannels.xml) | !String.IsEmpty(Skin.String(Furniture.EnableClock.TopLeft))]]">
                        <param name="top">80</param>
                    </include>
                    <include content="Furniture_Busy">
                        <param name="hasprogress">false</param>
                        <param name="hasbackground">Skin.HasSetting(ToastNotifications.Tabbed)</param>
                        <param name="icon">special://skin/extras/icons/timer.png</param>
                        <param name="mainlabel">$INFO[System.AlarmPos(shutdowntimer)]</param>
                        <param name="minilabel">[CAPITALIZE]$LOCALIZE[20144][/CAPITALIZE]</param>
                        <param name="haslabel">True</param>
                        <param name="hasbackground">Skin.HasSetting(ToastNotifications.Tabbed)</param>
                        <param name="visible">System.HasAlarm(shutdowntimer)</param>
                        <param name="flipspinner">false</param>
                    </include>
                </control>
            </control>
            <control type="group">
                <bottom>-40</bottom>
                <left>-120</left>
                <include>Furniture_Bottom_Left</include>
            </control>
            <control type="group">
                <include>Furniture_Bottom_Right</include>
            </control>
        </control>

        <control type="group">
            <visible>!$EXP[Exp_InfoDialogs]</visible>
            <include>Animation_Transition_InfoPanel_Hide</include>
            <top>79</top>
            <left>-120</left>
            <include content="Widget_Busy">
                <param name="label">$LOCALIZE[19033]</param>
                <param name="visible">True</param>
                <param name="include">List_Button_Row_VideoInfo</param>
                <left>200</left>
                <top>504</top>
            </include>
            <control type="group">
                <include content="Object_Top" condition="Skin.HasSetting(Furniture.DisableLeftHeader)">
                    <param name="top">-79</param>    
                </include>                
                <include content="Info_Panel">
                    <top>view_pad</top>
                    <width>info_panel_w</width>
                    <left>view_side</left>
                </include>
                <include content="Info_Viewline">
                    <param name="label">$LOCALIZE[31324]</param>
                </include>
            </control>
        </control>

    </controls>
</window>