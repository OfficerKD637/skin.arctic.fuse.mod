<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1120">
    <zorder>997</zorder>
    <visible>Skin.HasSetting(Background.DisableVideo)</visible>
    <visible>Player.HasVideo + !Window.IsActive(VideoFullScreen.xml)</visible>
    <controls>

        <control type="group">
            <visible>!Skin.HasSetting(Background.DisablePIP) + [Window.IsMedia | $EXP[Exp_Window_IsHub] | Window.IsVisible(1130) | Window.IsVisible(1131) | Window.IsVisible(1105) | Window.IsVisible(1185)] + !Window.IsVisible(addonbrowser) + !$EXP[Exp_InfoDialogs] + !Window.IsVisible(1123) + !Window.IsVisible(1113)</visible>
            <animation type="Visible" reversible="false">
                <effect type="slide" start="0,48" end="0" center="auto" tween="back" easing="out" time="400" />
            </animation>
            <animation type="WindowOpen" reversible="false">
                <effect type="slide" start="0,48" end="0" center="auto" tween="back" easing="out" time="400" />
            </animation>
            <right>40</right>
            <bottom>40</bottom>
            <width>560</width>
            <height>360</height>
            <control type="group">
                <include content="Dialog_Background_Blur">
                    <param name="shadow">true</param>
                    <param name="diffuse">diffuse/dialog_w480_h400.png</param>
                </include>
                <include condition="true">Dialog_Background_Glass</include>
                <control type="group">
                    <include content="Dimension_Padding">
                        <param name="pad">20</param>
                    </include>
                    <visible>Player.HasVideo</visible>
                    <control type="image">
                        <texture colordiffuse="black" border="20">common/box.png</texture>
                    </control>
                    <control type="videowindow">
                        <top>5</top>
                        <bottom>5</bottom>
                    </control>
                </control>
                
                <control type="group">
                    <left>10</left>
                    <right>10</right>
                    <height>80</height>
                    <bottom>10</bottom>
                    <control type="group">
                        <centertop>50%</centertop>
                        <height>50</height>
                        <width>50</width>
                        <right>20</right>
                        <include content="Info_FooterItemIcon">
                            <param name="icon">$VAR[Image_NowPlaying_PlayPause]</param>
                            <param name="centered">true</param>
                            <param name="size">50</param>
                        </include>
                        <control type="group">
                            <centerleft>50%</centerleft>
                            <centertop>50%</centertop>
                            <height>100</height>
                            <width>100</width>
                            <control type="image">
                                <bordersize>-4</bordersize>
                                <texture colordiffuse="$VAR[ColorHighlight]">$INFO[Player.Progress,progress/circle/p,.png]</texture>
                                <aspectratio align="center" aligny="center">keep</aspectratio>
                            </control>
                            <control type="image">
                                <bordersize>-4</bordersize>
                                <texture colordiffuse="$VAR[ColorGradient]">$INFO[Player.Progress,progress/circle/p,.png]</texture>
                                <animation effect="fade" end="66" condition="true">Conditional</animation>
                                <aspectratio align="center" aligny="center">keep</aspectratio>
                                <include content="Defs_Progress_Colorfade">
                                    <param name="id">933</param>
                                </include>
                            </control>
                        </control>
                        <control type="progress" id="933">
                            <height>1</height>
                            <width>1</width>
                            <left>-1000</left>
                            <texturebg />
                            <lefttexture />
                            <midtexture />
                            <righttexture />
                            <info>Player.Progress</info>
                            <visible>false</visible>
                        </control>
                    </control>
                    <include content="Object_InfoCircle_Text_Top" condition="!Skin.HasSetting(Furniture.DisableNowPlaying)">
                        <label>$VAR[Label_NowPlayingTitle]</label>
                        <right>100</right>
                        <left>20</left>
                        <textcolor>panel_fg_90</textcolor>
                        <shadowcolor>panel_bg_70</shadowcolor>
                    </include>
                    <include content="Object_InfoCircle_Text_Sub" condition="!Skin.HasSetting(Furniture.DisableNowPlaying)">
                        <label>$INFO[Player.Time]$INFO[Player.Duration, / ,]</label>
                        <right>100</right>
                        <left>20</left>
                        <textcolor>panel_fg_90</textcolor>
                        <shadowcolor>panel_bg_70</shadowcolor>
                    </include>
                </control>
            </control>
        </control>


        <control type="group">
            <visible>![!Skin.HasSetting(Background.DisablePIP) + [Window.IsMedia | $EXP[Exp_Window_IsHub] | Window.IsVisible(1130) | Window.IsVisible(1131) | Window.IsVisible(1105) | Window.IsVisible(1185)] + !Window.IsVisible(addonbrowser) + !$EXP[Exp_InfoDialogs] + !Window.IsVisible(1123) + !Window.IsVisible(1113)]</visible>
            <left>-1920</left>
            <top>-1080</top>
            <width>100</width>
            <height>100</height>
            <control type="videowindow" />
        </control>
    </controls>
</window>