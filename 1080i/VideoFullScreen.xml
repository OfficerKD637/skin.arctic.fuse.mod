<?xml version="1.0" encoding="UTF-8"?>
<window>
    <include>Animation_OSD_Fullscreen_Change</include>
    <onload>ClearProperty(OSDRelaunchFullscreen,Home)</onload>
    <onload>Dialog.Close(1175,force)</onload>
    <onunload condition="Skin.String(Enable.PlotDetails.Fallback,Trakt)">RunPlugin(plugin://script.skinvariables/?info=get_params_file&amp;&amp;special://skin/extras/filters/recent_type_trakt_stats.json)</onunload>
    <onunload condition="Skin.String(Enable.PlotDetails.Fallback,Trakt)">RunPlugin(plugin://script.skinvariables/?info=get_params_file&amp;&amp;special://skin/extras/filters/recent_movie_trakt_stats.json)</onunload>
    <onunload condition="Skin.String(Enable.PlotDetails.Fallback,Trakt)">RunPlugin(plugin://script.skinvariables/?info=get_params_file&amp;&amp;special://skin/extras/filters/recent_episode_trakt_stats.json)</onunload>
    <controls>
        <!-- HDR Pop Up Logo -->
        <control type="image" id="3">
            <visible>[!String.IsEmpty(System.SupportedHDRTypes) + !String.IsEmpty(VideoPlayer.Hdrtype) + !String.IsEmpty(Skin.String(Enable.OSD.HDRPopUp))]</visible>
            <texture>$VAR[Image_OSD_HDRPopUp]</texture>    
            <aspectratio>keep</aspectratio>    
            <width>150</width>
            <right>view_menu</right> 
            <centertop>100</centertop>
            
            <animation type="WindowOpen" condition="True">
                <effect type="fade" start="0" end="100" time="500" delay="3000" reversible="false"/>
                <effect type="fade" start="100" end="0" time="500" delay="7000" reversible="false"/>
            </animation>
        </control>
        <include>OSD_Background_Dim</include>
        <include content="Background_Notification_Overlay" condition="!Skin.HasSetting(ToastNotifications.Tabbed)">
            <param name="colordiffuse">panel_bg_70</param>
            <param name="id">2</param>
        </include>
        <control type="grouplist" id="0">
            <orientation>vertical</orientation>
            <centertop>100</centertop>
            <height>120</height>
            <left>80</left>
            <include content="Overlay_InfoLabel">
                <param name="id">10</param>
                <textcolor>panel_fg_100</textcolor>
                <textoffsetx>10</textoffsetx>
                <font>font_mini</font>
            </include>
            <include content="Overlay_InfoLabel">
                <param name="id">11</param>
                <textcolor>panel_fg_100</textcolor>
                <textoffsetx>10</textoffsetx>
                <font>font_mini</font>
            </include>
            <include content="Overlay_InfoLabel">
                <param name="id">12</param>
                <textcolor>panel_fg_100</textcolor>
                <textoffsetx>10</textoffsetx>
                <font>font_mini</font>
            </include>
        </control>
    </controls>
</window>