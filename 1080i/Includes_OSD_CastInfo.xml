<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="OSD_CastInfo_ExpandGroup">
        <control type="group">
            <height>400</height>
            <bottom>view_pad</bottom>
            <nested />
        </control>
    </include>

    <include name="OSD_CastInfo_HintText">
        <param name="visible">true</param>
        <param name="colordiffuse">panel_fg_70</param>
        <param name="centerbottom">25</param>
        <param name="left">view_side</param>
        <param name="fade_in">true</param>
        <param name="fade_out">true</param>
        <param name="arrow_direction">down</param>
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <include content="Animation_Fade_In" condition="$PARAM[fade_in]">
                    <param name="type">Visible</param>
                </include>
                <include content="Animation_Fade_Out" condition="$PARAM[fade_out]">
                    <param name="type">Hidden</param>
                </include>
                <left>$PARAM[left]</left>
                <centerbottom>$PARAM[centerbottom]</centerbottom>
                <height>40</height>
                <control type="image">
                    <centerleft>10</centerleft>
                    <width>40</width>
                    <height>40</height>
                    <centertop>50%</centertop>
                    <texture colordiffuse="$PARAM[colordiffuse]">special://skin/extras/icons/arrow-$PARAM[arrow_direction].png</texture>
                </control>
                <control type="label">
                    <textcolor>$PARAM[colordiffuse]</textcolor>
                    <left>40</left>
                    <font>font_tiny</font>
                    <align>left</align>
                    <label>$PARAM[label]</label>
                </control>
            </control>
        </definition>
    </include>

    <include name="OSD_List_Dimensions">
        <height>400</height>
        <top>-94</top>
    </include>

    <include name="OSD_CastInfo_Details">
        <control type="group">
            <top>0</top>
            <control type="grouplist">
                <left>1190</left>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
                <control type="group">
                    <height>75</height>
                    <control type="group">
                        <centertop>50%</centertop>
                        <height>60</height>
                        <control type="group">
                            <height>60</height>
                            <width>60</width>
                            <include content="Object_Control">
                                <param name="control">image</param>
                                <bordersize>2</bordersize>
                                <bordertexture colordiffuse="panel_fg_100">common/circle.png</bordertexture>
                                <texture colordiffuse="panel_bg_70">common/circle.png</texture>
                            </include>
                            <include content="Object_Control">
                                <param name="control">image</param>
                                <bordersize>2</bordersize>
                                <aspectratio scalediffuse="false">scale</aspectratio>
                                <texture diffuse="common/circle.png" colordiffuse="panel_fg_100">$PARAM[icon]</texture>
                            </include>
                        </control>
                        <control type="group">
                            <left>80</left>
                            <control type="label">
                                <label>$PARAM[mainlabel]</label>
                                <font>font_mini_bold</font>
                                <textcolor>panel_fg_100</textcolor>
                                <height>30</height>
                            </control>
                            <control type="label">
                                <label>$PARAM[sublabel]</label>
                                <font>font_mini_plot</font>
                                <textcolor>panel_fg_70</textcolor>
                                <height>30</height>
                                <top>30</top>
                            </control>
                        </control>
                    </control>
                </control>
                <control type="textbox">
                    <top>20</top>
                    <label>$PARAM[plotlabel]</label>
                    <font>font_mini_plot</font>
                    <textcolor>panel_fg_70</textcolor>
                    <height>190</height>
                </control>
            </control>
        </control>
    </include>

</includes>