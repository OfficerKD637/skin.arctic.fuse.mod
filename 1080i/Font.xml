<?xml version="1.0" encoding="UTF-8"?>
<fonts>

    <fontset id="Default" unicode="false">
        <include content="Font_Default">
            <param name="font_black">Figtree-Bold.ttf</param>
            <param name="font_bold">Figtree-Bold.ttf</param>
            <param name="font_regular">Figtree-Regular.ttf</param>
            <param name="font_light">Figtree-Light.ttf</param>
            <param name="aspect_system">0.8</param>
            <param name="aspect_standard">1</param>
			<param name="title_linespacing">1</param>
			<param name="plot_linespacing">1.1</param>
        </include>
    </fontset>
	
	<fontset id="Condensed (Classic)" unicode="false">
        <include>Font_Default</include>
    </fontset>		    

    <fontset id="Inter (Experimental)" unicode="false">
        <include content="Font_Default">
            <param name="font_black">Inter-Bold.ttf</param>
            <param name="font_bold">Inter-Bold.ttf</param>
            <param name="font_regular">Inter-Regular.ttf</param>
            <param name="font_light">Inter-Light.ttf</param>
            <param name="aspect_system">0.8</param>
            <param name="aspect_standard">1</param>
			<param name="title_linespacing">0.9</param>
			<param name="plot_linespacing">1.1</param>
        </include>
    </fontset>
	
	<fontset id="Nunito (Experimental)" unicode="false">
        <include content="Font_Default">
            <param name="font_black">Nunito-Bold.ttf</param>
            <param name="font_bold">Nunito-Bold.ttf</param>
            <param name="font_regular">Nunito-Regular.ttf</param>
            <param name="font_light">Nunito-Light.ttf</param>
            <param name="aspect_system">0.8</param>
            <param name="aspect_standard">1</param>
			<param name="title_linespacing">0.8</param>
			<param name="plot_linespacing">1.0</param>
        </include>
    </fontset>

    <fontset id="NotoRoboto - Arabic / Hebrew" unicode="true">

        <include content="Font_Default">
            <param name="font_black">RobotoNotoCondensed-Bold.ttf</param>
            <param name="font_bold">RobotoNotoCondensed-Bold.ttf</param>
            <param name="font_regular">RobotoNotoCondensed-Regular.ttf</param>
            <param name="font_light">RobotoNotoCondensed-Light.ttf</param>
            <param name="aspect_system">0.8</param>
        </include>
    </fontset>

    <fontset id="CJK - Chinese / Japanese / Korean" unicode="true">

        <include content="Font_Default">
            <param name="font_black">resource://resource.font.robotocjksc/RobotoCJKSC-Bold.ttf</param>
            <param name="font_bold">resource://resource.font.robotocjksc/RobotoCJKSC-Bold.ttf</param>
            <param name="font_regular">resource://resource.font.robotocjksc/RobotoCJKSC-Regular.ttf</param>
            <param name="font_light">resource://resource.font.robotocjksc/RobotoCJKSC-Light.ttf</param>
            <param name="aspect_system">0.8</param>
            <param name="aspect_standard">0.89</param>
        </include>
    </fontset>

</fonts>
