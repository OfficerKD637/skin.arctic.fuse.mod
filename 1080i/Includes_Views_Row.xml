        <param name="wall_offsety">40</param>
        <param name="wall_posy">-117</param>
        <param name="wall_animnumitems">8</param>
        <definition>
            <control type="group">
                <visible>Control.IsVisible($PARAM[id]8)</visible>
                <visible>!$EXP[Exp_InfoDialogs]</visible>
                
                <animation type="Visible" reversible="false">
                    <effect type="fade" start="0" end="100" time="400" tween="sine" easing="in"/>
                    <effect type="slide" start="0,200" end="0" center="auto" tween="cubic" easing="out" time="300"/>
                </animation>
                <include content="$PARAM[include]" condition="$EXP[Exp_View_WallVert]">
                    <param name="id">$PARAM[id]8</param>
                    <param name="orientation">vertical</param>
                    <param name="preloaditems">2</param>
                    <param name="offset_y">$PARAM[wall_offsety]</param>
                    <animation effect="slide" start="0" end="0,$PARAM[wall_posy]" tween="cubic" easing="out" time="300" condition="Skin.HasSetting(View.SwitchVerticalWallStyle) + Integer.IsGreater(Container.NumItems,$PARAM[wall_animnumitems]) + Integer.IsGreaterOrEqual(Container.Position,$PARAM[wall_animnumitems])">Conditional</animation>
                    <include content="Object_Top" condition="!Skin.HasSetting(View.SwitchVerticalWallStyle)">
                        <param name="top">$PARAM[wall_toppadding]</param>
                    </include>
                    <include content="Object_Bottom" condition="!Skin.HasSetting(View.SwitchVerticalWallStyle)">
                        <param name="bottom">$PARAM[wall_bottompadding]</param>
                    </include>
                    <include content="Object_Bottom" condition="Skin.HasSetting(View.SwitchVerticalWallStyle)">
                        <param name="bottom">$PARAM[wall_posy]</param>
                    </include>
                    <left>$PARAM[wall_leftpadding]</left>
                    <right>$PARAM[wall_rightpadding]</right>
                    <onback>ClearProperty(FurnitureWallMode)</onback>
                    <onleft>SetProperty(List.ViewContainer,50)</onleft>
                    <onleft>SetFocus(303,1,absolute)</onleft>                        
                    <onright>611</onright>
                    <pagecontrol>66</pagecontrol>
                    <onback>Container.SetViewMode($PARAM[id])</onback>
                    <onback>$PARAM[id]50</onback>
                    <onfocus>ClearProperty(TMDbHelper.WidgetContainer)</onfocus>
                    <onfocus>SetProperty(Background.ShowOverlay,True,Home)</onfocus>
                    <visible>String.IsEqual(Window.Property(FurnitureWallMode),Container.FolderPath)</visible>
                    <visible>$EXP[Exp_View_$PARAM[id]]</visible>
                    <viewtype label="$LOCALIZE[587] $LOCALIZE[31167]">wrap</viewtype>
                </include>
                <include content="$PARAM[include]" condition="!$EXP[Exp_View_WallVert]">
                    <param name="id">$PARAM[id]8</param>
                    <param name="preloaditems">2</param>
                    <param name="offset_x">$PARAM[wall_offsetx]</param>
                    <top>$PARAM[wall_toppadding_horz]</top>
                    <bottom>$PARAM[wall_bottompadding]</bottom>
                    <left>$PARAM[wall_leftpadding_horz]</left>
                    <right>$PARAM[wall_rightpadding_horz]</right>
                    
                    <include content="Action_View_Movement_OnUp">
                        <param name="id">$PARAM[id]8</param>
                    </include>
                        
                    <ondown>610</ondown>
                    <pagecontrol>69</pagecontrol>
                    <onback>ClearProperty(FurnitureWallMode)</onback>
                    <onback>Container.SetViewMode($PARAM[id])</onback>
                    <onback>$PARAM[id]50</onback>
                    <onfocus>ClearProperty(TMDbHelper.WidgetContainer)</onfocus>
                    <onfocus>SetProperty(Background.ShowOverlay,True,Home)</onfocus>
                    <visible>String.IsEqual(Window.Property(FurnitureWallMode),Container.FolderPath)</visible>
                    <visible>$EXP[Exp_View_$PARAM[id]]</visible>
                    <viewtype label="$LOCALIZE[587] $LOCALIZE[31167]">wrap</viewtype>
                </include>
            </control>
            <control type="group">
                <include content="Object_Hidden_Button">
                    <param name="id">$PARAM[id]50</param>
                    <onfocus>SetFocus($PARAM[id])</onfocus>
                </include>
                <include content="Object_Hidden_Button">
                    <param name="id">$PARAM[id]60</param>
                    <onfocus>Container.SetViewMode($PARAM[id]8)</onfocus>
                    <onfocus>Container.SetViewMode($PARAM[id]8)</onfocus>
                    <onfocus>SetFocus($PARAM[id]8)</onfocus>
                </include>
            </control>
            <control type="group">
                <visible>Skin.HasSetting(View.SwitchVerticalWallStyle) + $EXP[Exp_View_WallVert]</visible>
                <control type="image">
                    <top>0</top>
                    <height>view_side</height>
                    <texture colordiffuse="main_bg_90" flipy="true">common/gradient-v.png</texture>
                    <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="in" condition="Integer.IsGreaterOrEqual(Container.Position,$PARAM[wall_animnumitems])" reversible="false">Conditional</animation>
                    <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="in" condition="![Integer.IsGreaterOrEqual(Container.Position,$PARAM[wall_animnumitems])]" reversible="false">Conditional</animation>
                </control>
                <control type="image">
                    <bottom>0</bottom>
                    <height>view_side</height>
                    <texture colordiffuse="main_bg_90">common/gradient-v.png</texture>
                    <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="in" condition="Container.HasNext" reversible="false">Conditional</animation>
                    <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="in" condition="!Container.HasNext" reversible="false">Conditional</animation>
                </control>
            </control>
        </definition>
    </include>

