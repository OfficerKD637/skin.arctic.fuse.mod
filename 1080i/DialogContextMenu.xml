<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol>996</defaultcontrol>
    <coordinates>
        <origin x="0" y="0" />
    </coordinates>
    <onload>AlarmClock(Refocus,SetFocus(1001),00:00,silent)</onload>
    <controls>

        <!-- Small Menu -->
        <include content="Dialog_ContextMenu" condition="[!Skin.HasSetting(Dialog.EnableAdaptiveContextMenu) | [Skin.HasSetting(Dialog.EnableAdaptiveContextMenu) + [Window.IsVisible(1160) | Window.IsVisible(favouritesbrowser) | Window.IsVisible(filemanager) | Window.IsVisible(addonbrowser) | Window.IsVisible(Custom_1132_Window_Addons.xml) | !String.IsEmpty(ListItem.AddonName)]]]">
        </include>

        <!-- Large Menu -->
        <include content="Dialog_ContextMenu" condition="Skin.HasSetting(Dialog.EnableAdaptiveContextMenu) + ![Window.IsVisible(1160) | Window.IsVisible(favouritesbrowser) | Window.IsVisible(filemanager) | Window.IsVisible(addonbrowser) | Window.IsVisible(Custom_1132_Window_Addons.xml) | !String.IsEmpty(ListItem.AddonName)]">
            <param name="include_fullmenu">true</param>
            <param name="dialog_size">Dimension_DialogHugeMenu</param>
            <param name="button_width">764</param>
            <param name="lines_right">476</param>
            <param name="header">$VAR[Label_ContextMenu_Title]</param>
        </include>
    </controls>
</window>